{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/backend/.env",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Frontend",
            "program": "${workspaceFolder}/frontend/src/index.tsx",
            "runtimeArgs": [
                "--experimental-modules"
            ],
        }
    ]
}
